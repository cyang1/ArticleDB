<div class="container">
<div class="row">
	<div class="span3"></div>
	<div class="span6">

<%= form_for @user do |f| %>
<div class="control-group">
  <%= f.text_field :first_name, :class=>"span6", :placeholder => "First Name" %>
</div>
<div class="control-group">
  <%= f.text_field :last_name, :class=>"span6", :placeholder => "Last Name" %>
</div>

<div class="control-group">
  <%= f.text_field :email, :class=>"span6", :placeholder => "E-Mail" %>
</div>

<div class="control-group">
  <%= f.password_field :password, :class=>"span6", :placeholder => "Password" %>
</div>
<%= f.submit "Submit", :class => "btn btn-primary btn-block" %>
<% end %>
</div>
	<div class="span3"></div>

</div>
</div>

<script>
$(document).ready(function() {
	$('input[type=file]').bootstrapFileInput();
});
</script>