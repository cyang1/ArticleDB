<div class="container">
<div class="row">
	<div class="span3"></div>
	<div class="span6">


<%= form_tag sessions_path do %>

	<div class="field">
    <%= text_field_tag :email, params[:email], :class => "span6", :placeholder => "E-mail" %>
  </div>

	<div class="field">
     <%= password_field_tag :password, params[:password], :class => "span6", :placeholder => "Password" %>
  </div>

<%= submit_tag "Log In", :class => "btn btn-primary btn-block" %>
<% end %>


</div>
	<div class="span3"></div>

</div>

</div>