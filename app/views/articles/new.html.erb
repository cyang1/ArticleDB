<div class="container">
<div class="row">
	<div class="span3"></div>
	<div class="span6">

<%= form_for @article, :html => { :multipart => true } do |f| %>
<div class="control-group">
  <%= f.text_field :name, :class=>"span6", :placeholder => "Article Name" %>
</div>
<div class="control-group">
  <%= f.text_area :summary, :class=>"span12", :rows => 4, :placeholder => "Summary ..." %>
</div>
<div class="control-group">
  <%= f.file_field :pdf, :title => "Browse for PDF" %>
</div>
<%= f.hidden_field :collaboration_id, :value => params[:collaboration_id] %>
<%= f.submit "Submit", :class => "btn btn-primary btn-block" %>
<% end %>
</div>
	<div class="span3"></div>

</div>
</div>

<script>
$(document).ready(function() {
	$('input[type=file]').bootstrapFileInput();
});
</script>